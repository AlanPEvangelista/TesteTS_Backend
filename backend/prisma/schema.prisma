// Prisma schema para SQLite em dev e Postgres em prod
// DATABASE_URL deve ser configurado em .env

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Para produção com Postgres, altere para "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password_hash String
  name          String?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  clients       Client[]
}

model Client {
  id         String   @id @default(uuid())
  name       String
  phone      String
  email      String?
  address    String?
  notes      String?
  created_by String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user User @relation(fields: [created_by], references: [id])
}